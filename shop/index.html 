    <script>
        // Self-contained script for the AI chat pop-up
        document.addEventListener('DOMContentLoaded', function() {
            const openChatButton = document.getElementById('open-chat-button');
            const closeChatButton = document.getElementById('close-chat-button');
            const chatModalContainer = document.getElementById('chat-modal-container');
            const chatModalOverlay = document.querySelector('.chat-modal-overlay');
            function openModal() { if (chatModalContainer) chatModalContainer.classList.add('active'); }
            function closeModal() { if (chatModalContainer) chatModalContainer.classList.remove('active'); }
            if (openChatButton) openChatButton.addEventListener('click', openModal);
            if (closeChatButton) closeChatButton.addEventListener('click', closeModal);
            if (chatModalOverlay) chatModalOverlay.addEventListener('click', closeModal);
        });
    </script>
